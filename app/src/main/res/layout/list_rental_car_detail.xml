<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_view"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/click_new_car"
                    android:id="@+id/btn_booking"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:background="@mipmap/name_2"
                        android:clickable="true"
                        android:weightSum="1">

                        <TextView
                            android:text="Tài xế: "
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_name"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_weight="0.6" />
                    </LinearLayout>
                    <TextView
                        android:text="Gọi xe"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:background="@android:color/transparent"
                         />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/bg_vehicle"
                    android:padding="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:text="Điểm đi  "
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="0dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_from"
                            android:textStyle="bold"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:text="Điểm đến  "
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="0dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_to"
                            android:textStyle="bold"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:text="Hình thức  "
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="0dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_hire_type"
                            android:textStyle="bold"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:text="Loại xe  "
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="0dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_car_type"
                            android:textStyle="bold"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">

                        <TextView
                            android:text="Số chỗ  "
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="0dp"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_car_size"
                            android:textStyle="bold"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_marginRight="3dp"
                            android:layout_weight="0.5">

                            <TextView
                                android:text="Ngày giờ đi"
                                android:layout_width="0dp"
                                android:lines="2"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:gravity="top"
                                android:layout_weight="0.4" />

                            <TextView
                                android:text="TextView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:padding="5dp"
                                android:id="@+id/txt_date_from"
                                android:background="@mipmap/img_vehicle_info"
                                android:layout_weight="0.6" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="0.5">

                            <TextView
                                android:text="Ngày giờ đến"
                                android:layout_width="0dp"
                                android:layout_marginRight="5dp"
                                android:gravity="top"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:layout_weight="0.4"
                                android:id="@+id/textView11" />

                            <TextView
                                android:text="TextView"
                                android:layout_width="0dp"
                                android:background="@mipmap/img_vehicle_info"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:id="@+id/txt_date_to"
                                android:textColor="@color/black"
                                android:layout_weight="0.6" />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>