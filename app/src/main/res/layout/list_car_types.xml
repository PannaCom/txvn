<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_car_type"
            android:id="@+id/cv_car_type"
            android:padding="2dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/khoangcach"
                android:layout_centerHorizontal="true"
                android:id="@+id/img_car_type" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_car_type"
                android:text="Xe hợp đồng"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:id="@+id/txt_car_type" />
        </RelativeLayout>

</RelativeLayout>