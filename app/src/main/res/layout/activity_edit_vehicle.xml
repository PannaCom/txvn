<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#029ca0"
        android:id="@+id/toolbar">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/car"
            android:layout_gravity="center"
            android:id="@+id/imageView15" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_back" />
    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:scrollbars="none"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_register"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/layout_title"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sửa thông tin nhà xe"
                        android:textSize="18sp"
                        android:textColor="@color/md_blue_800"
                        android:id="@+id/textView9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vui lòng điền đầy đủ và chính xác thông tin "
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:id="@+id/textView23" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_content"
                android:layout_below="@id/layout_title"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:padding="15dp"
                    android:background="@drawable/border_register"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/layout_name">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Họ tên"
                                android:textSize="13sp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/txt_name" />

                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền tên"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_name_error" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register_no_edit"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/layout_telephone">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số điện thoại"
                                android:textSize="13sp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:inputType="phone"
                                android:ems="10"
                                android:textSize="16sp"
                                android:focusable="false"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/txt_telephone" />

                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền số điện thoại"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_telephone_error" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/layout_bien_so">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biển số"
                                android:textSize="13sp"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/txt_bien_so" />
                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền biển số xe"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_bien_so_error" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:padding="5dp"
                        android:id="@+id/layout_category">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hãng xe"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:textSize="16sp"
                                android:singleLine="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/txt_category" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_get_category"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/select" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa chọn hãng xe"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_category_error" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/layout_car_name">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tên xe"
                                android:textSize="13sp" />

                            <AutoCompleteTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:hint="VD : Lexus RX 350 2017 "
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/txt_car_name" />

                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền tên xe"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_car_name_error" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:padding="5dp"
                        android:id="@+id/layout_size">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số chỗ"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/edt_size" />

                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_get_size"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/select" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền số chỗ"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_size_error" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:padding="5dp"
                        android:id="@+id/layout_vehicle_type">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loại xe"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/edt_vehicle_type" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_get_vehicle_type"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/select" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền loại xe"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_vehicle_type_error" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:padding="5dp"
                        android:id="@+id/layout_produce_year">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Năm sản xuất"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:id="@+id/edt_produce_year" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_get_produce_year"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/select" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền năm sản xuất"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_produce_year_error" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/btn_register"
                        android:padding="5dp"
                        android:id="@+id/layout_price">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bảng giá"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:textSize="16sp"
                                    android:inputType="phone"
                                    android:hint="VD : 8000đ/km"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:id="@+id/edt_price" />

                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa điền giá vé"
                        android:layout_gravity="left"
                        android:layout_marginBottom="10dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        android:textColor="@color/md_red_700"
                        android:id="@+id/txt_price_error" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="right"
                        android:id="@+id/layout_tax">

                        <Button
                            android:text="Sửa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_register"
                            android:background="#029ca0"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
